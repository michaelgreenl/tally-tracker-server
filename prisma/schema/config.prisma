generator client {
    provider = "prisma-client-js"
}

generator zod {
    provider = "zod-prisma-types"
    output   = "../../src/types/shared/generated"
}

generator erd {
    provider = "prisma-erd-generator"
    output   = "../../docs/diagrams/architecture/ERD.md"
    theme    = "dark"
}

datasource db {
    provider = "postgresql"
}
